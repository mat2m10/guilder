<div class="home-banner w-100 align-items-center">
    <div class="container">
    <br>
    <br>
        <div class="row justify-content-left mt-5">
            <h1 class="mb-3 landing">Support your local craftsmen</h1>
            <%= form_tag crafts_path, method: :get , class:'form-inline mt-5' do %>
                <%= text_field_tag :query,
                    params[:query],
                    class: "form-control form-new theform",
                    placeholder: "Find a service by category"
                %>
                <%= submit_tag "Search", class: "btn btn-primary this-one mx-2" %>
            <% end %>
        </div>
    </div>
</div>    



